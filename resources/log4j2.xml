<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{HH:mm:ss.SSS}[%p][%X{RequestId}][%c{1}]: %msg%n
        </Property>
        <Property name="LOG_DIR">
            build/logs/
        </Property>
    </Properties>

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile
                name="File"
                fileName="${LOG_DIR}/application.log"
                filePattern="${LOG_DIR}/archive/application.%d{yyyy-MM-dd-HH}.log.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy filePattern="${LOG_DIR}/archive/application.%d{yyyy-MM-dd-HH}.log.gz" />
            </Policies>
            <!-- This will store 1 weeks of logs if not removed by other means 24 hours * 7 days -->
            <DefaultRolloverStrategy max="168"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Override wanted log levels -->
        <Logger name="org.springframework" level="ERROR" />
        <Logger name="org.hibernate" level="ERROR" />
        <Logger name="com.amazonaws" level="ERROR" />
        <Logger name="org.apache" level="ERROR" />
        <Logger name="springfox.documentation" level="ERROR" />
        <Logger name="com.example" level="DEBUG" />

        <Root level="DEBUG">
            <AppenderRef ref="File" level="DEBUG" />
            <AppenderRef ref="ConsoleAppender" level="INFO" />
        </Root>
    </Loggers>
</Configuration>